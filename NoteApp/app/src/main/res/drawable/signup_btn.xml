<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <!-- Shadow -->
                <shape android:shape="rectangle">
                    <solid android:color="#40000000" /> <!-- Semi-transparent shadow color -->
                    <corners android:radius="15dp" />
                </shape>
            </item>
            <item android:bottom="2dp" android:right="1dp">
                <!-- Main shape -->
                <shape android:shape="rectangle">
                    <solid android:color="@color/black" />
                    <size android:width="100dp" android:height="20dp" />
                    <corners android:radius="15dp" />
                    <stroke android:width="1dp" android:color="@color/black" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="false">
        <layer-list>
            <item>
                <!-- Shadow -->
                <shape android:shape="rectangle">
                    <solid android:color="#40000000" /> <!-- Semi-transparent shadow color -->
                    <corners android:radius="15dp" />
                </shape>
            </item>
            <item android:bottom="1dp" android:right="1dp">
                <!-- Main shape -->
                <shape android:shape="rectangle">
                    <solid android:color="#E6151B83" />
                    <stroke android:color="@color/black" android:width="2dp" />
                    <corners android:radius="15dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
