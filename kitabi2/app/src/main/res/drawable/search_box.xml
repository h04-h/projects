<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="#FFFFFF" /> <!-- White background -->

    <!-- Corner radius for rounded corners -->
    <corners android:radius="16dp" /> <!-- Adjust the corner radius as needed -->

    <!-- Border/Stroke -->
    <stroke
        android:width="2dp"
        android:color="#CCCCCC" /> <!-- Light gray border -->

    <!-- Padding inside the shape -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
